<form method="POST" action="/albums/<%= album.id %>/?_method=PUT">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= album.title %>" />

  <label for="length">Length</label>
  <input id="length" type="text" name="length" value="<%= album.length %>" />

  <label for="tracks">Tracks</label>
  <input id="tracks" type="text" name="tracks" value="<%= album.tracks %>" />

  <label for="year">Year</label>
  <input id="year" type="text" name="year" value="<%= album.year %>" />

  <input type="submit" />
</form>
