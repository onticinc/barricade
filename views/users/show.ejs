<div
  class="modal modal-sheet position-static d-block bg-secondary py-5"
  tabindex="-1"
  role="dialog"
  id="modalSheet"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-6 shadow">
      <div class="modal-header border-bottom-0">
        <div class="container">
          <img src="/images/barricade_pacman.png" style="width: 100%" />
        </div>
      </div>
      <div class="modal-body py-0">
        <div class="container">
          <hr class="my-4" />
          <h5>First Name:</h5>
          <h2><%= user.firstName %></h2>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>Last Name:</h5>
          <h3><%= user.lastName %></h3>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>Initials:</h5>
          <h4><%= user.initials %></h4>
        </div>
      </div>
      <div class="modal-footer flex-column border-top-0">
        <!-- <form method="POST" action="/games/<%= user.id %>/?_method=DELETE">
            <input type="submit" value="Delete Game" />
          </form> -->
        <!-- <a href="/games/edit/<%= user.id %>">Edit</a> -->
        <a href="/users">All Users</a>
      </div>
    </div>
  </div>
</div>
