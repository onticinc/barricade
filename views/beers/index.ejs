<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Beer</title>

    <!-- CSS Imports -->
    <%- include('../partials/bootstrap') %>
    <link rel="stylesheet" type="text/css" href="/public/css/app.css" />
  </head>
  <body>
    <% for( let index = 0; index < beers.length; index++ ) { %> <% let b =
    beers[index]; %> <% b = b.toJSON() %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Last</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><%= b.id %></th>
          <td><%= b.name %></td>
          <td><%= b.type %></td>
          <td><%= b.brewery %></td>
          <td><%= b.pricePerGlass %></td>
          <td><%= b.pricePerGrowler %></td>
          <td><%= b.pricePerGrowler %></td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Jacob</td>
          <td>Thornton</td>
          <td>@fat</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td>Larry</td>
          <td>the Bird</td>
          <td>@twitter</td>
        </tr>
      </tbody>
    </table>

    <p></p>
    <a href="/beers/<%= b.id %>">View Beer</a>
    <hr />
    <% } %>
  </body>
</html>
