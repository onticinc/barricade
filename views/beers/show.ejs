<div
  class="modal modal-sheet position-static d-block bg-secondary py-5"
  tabindex="-1"
  role="dialog"
  id="modalSheet"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-6 shadow">
      <div class="modal-header border-bottom-0">
        <div class="container">
          <img src="/images/barricade_pacman.png" style="width: 100%" />
          <h1 class="modal-title"><%= beer.name %></h1>
        </div>
      </div>
      <div class="modal-body py-0">
        <div class="container">
          <hr class="my-4" />
          <h5>Beer Type</h5>
          <h2><%= beer.type %></h2>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h1>Brewery:</h1>
          <h3><%= beer.brewery %></h3>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>Price Per Glass:</h5>
          <h4><%= beer.pricePerGlass %></h4>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>Price Per Growler:</h5>
          <h4><%= beer.pricePerGrowler %></h4>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>Cost Per Keg:</h5>
          <h4><%= beer.costPerKeg %></h4>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>ABV%:</h5>
          <h4><%= beer.abv %></h4>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>IBU%:</h5>
          <h4><%= beer.ibu %></h4>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>Notes:</h5>
          <h4><%= beer.notes %></h4>
        </div>
        <div class="container">
          <hr class="my-4" />
          <h5>Status:</h5>
          <h4><%= beer.status %></h4>
        </div>
      </div>
      <div class="modal-footer flex-column border-top-0">
        <!-- <form method="POST" action="/beers/<%= beer.id %>/?_method=DELETE">
            <input type="submit" value="Delete Beer" />
          </form> -->
        <!-- <a href="/beers/edit/<%= beer.id %>">Edit</a> -->
        <a href="/beers">All Beer</a>
      </div>
    </div>
  </div>
</div>

</body>
</html>
     
     

      

